# ==============================================================================
# DEVELOPMENT ENVIRONMENT TEMPLATE
# ==============================================================================
# INSTRUCTIONS:
# 1. Copy this file to: .env.dev
# 2. Replace 'yourname' with your actual name
# 3. Update values to match your local setup
# 4. Source this file: source .env.dev
# 5. Run application: mvn spring-boot:run
#
# NEVER COMMIT YOUR PERSONAL .env.dev TO GIT!
# ==============================================================================

# ============================================================================
# CORE ENVIRONMENT SETTINGS
# ============================================================================
# Which environment are you running? (dev, staging, prod)
export APP_ENV=dev

# Your name for personalized configuration
export DEVELOPER_NAME=yourname

# Your workspace directory (optional)
export DEVELOPER_WORKSPACE=/path/to/your/workspace

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Your personal server port (to avoid conflicts with other developers)
export SERVER_PORT=8080

# Context path (optional override)
# export SERVER_CONTEXT_PATH=/api

# ============================================================================
# MYSQL DATABASE CONFIGURATION
# ============================================================================
# MySQL JDBC URL
export DB_MYSQL_URL=jdbc:mysql://localhost:3306/yourname_db

# MySQL credentials
export DB_MYSQL_USERNAME=yourname
export DB_MYSQL_PASSWORD=yourpassword

# Connection pool settings (optional)
# export DB_MYSQL_POOL_MIN_SIZE=2
# export DB_MYSQL_POOL_MAX_SIZE=10

# ============================================================================
# POSTGRESQL DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL JDBC URL
export DB_POSTGRES_URL=jdbc:postgresql://localhost:5432/yourname_db

# PostgreSQL credentials
export DB_POSTGRES_USERNAME=yourname
export DB_POSTGRES_PASSWORD=yourpassword

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis host
export REDIS_HOST=localhost

# Redis port (use different port if running multiple instances)
export REDIS_PORT=6379

# Redis password (leave empty for local dev)
export REDIS_PASSWORD=

# Redis database index
export REDIS_DATABASE=0

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================
# Kafka bootstrap servers
export KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Consumer group ID (make it unique to avoid conflicts)
export KAFKA_CONSUMER_GROUP_ID=yourname-consumer-group

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT Secret (DEV ONLY - never use this in production!)
export JWT_SECRET=dev-jwt-secret-not-for-production

# JWT expiration (milliseconds)
export JWT_EXPIRATION=86400000

# API Key (if using API key authentication)
# export API_KEY=your-dev-api-key

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level
export LOGGING_LEVEL_ROOT=INFO
export LOGGING_LEVEL_DELOITTE=DEBUG

# Log file location (optional)
# export LOGGING_FILE_NAME=logs/yourname-application.log

# ============================================================================
# EXTERNAL SERVICES (if needed)
# ============================================================================
# Third-party API endpoints
# export EXTERNAL_API_URL=http://localhost:9000
# export EXTERNAL_API_KEY=dev-api-key

# OAuth2 settings (if using)
# export OAUTH2_CLIENT_ID=your-client-id
# export OAUTH2_CLIENT_SECRET=your-client-secret

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Enable/disable features
export SWAGGER_ENABLED=true
export ACTUATOR_ENABLED=true
export H2_CONSOLE_ENABLED=false

# Debug mode
# export DEBUG=true
# export JAVA_TOOL_OPTIONS="-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005"

# ============================================================================
# OPTIONAL OVERRIDES
# ============================================================================
# Override any application property using this format:
# export PROPERTY_NAME=value
# Example: export DB_MYSQL_JPA_SHOW_SQL=true

# ============================================================================
# NOTES
# ============================================================================
# - Use 'source .env.dev' to load these variables
# - Verify with: echo $DEVELOPER_NAME
# - Unset with: unset DEVELOPER_NAME
# ==============================================================================
